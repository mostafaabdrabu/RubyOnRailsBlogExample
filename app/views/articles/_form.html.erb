<%= form_with model: article do |form| %>
  <div class="row">
    <div class="col-md-6">
      <%= form.label :title %><br>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <%= form.label :body %><br>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= form.text_area :body, class: "form-control" %><br>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
        <%= form.label :status %><br>
        <%= form.select(:status, ['public', 'private', 'archived'], {}, { :class => 'form-control' }) %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-6">
      <%= form.submit "Create Article", class: 'btn btn-success'  %>
    </div>
  </div>
<% end %>
  