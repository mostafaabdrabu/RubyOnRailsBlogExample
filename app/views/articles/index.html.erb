<div class="center-block">
    <div class="row">
        <div class="col-md-1">
            <h1>Articles</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <p>Our blog has <strong class="text-danger"> <%= Article.public_count %> </strong> articles and counting!</p>
        </div>
    </div>
    <div class="row">
    <div class="col-md-6 list-group">
        <% @articles.each do |article| %>
            <%= link_to article.title, article, class: "list-group-item" %>
        <% end %>
    </div>
    </div>
</div>

<%= link_to "New Article", new_article_path, class: "btn btn-primary" %>
